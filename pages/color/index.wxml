<page>
    <view class="input-item">
        <label class="label">十六进制：</label>
        <input class="input" type="text" bindinput="onHexChanged"/>
        <view class="action">复制</view>
    </view>
    <view class="input-item">
        <label class="label">RGBA：</label>
        <input class="input" type="text"/>
        <view class="action">复制</view>
    </view>
    <view class="preview-section">
        <view class="preview" style="background: #{{hex}};"></view>
    </view>
</page>