.board {
    padding: 16rpx;
}

.area-wrapper {
    position: relative;
    border: 1rpx solid #e4e4e4;
    background: white;
}

.input, .output {
    box-sizing: border-box;
    width: 100%;
    border: none;
    padding: 12rpx;
    font-size: 28rpx;
}

.board .actions {
    display: flex;
    align-items: end;
    justify-content: flex-end;
}

.board .action {
    padding: 12rpx 24rpx;
    text-align: center;
    font-size: 28rpx;
}

.action.main {
    background: #20B2AA;
    color: white;
}

.action.secondary {
    color: #999;
}

.operation {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 16rpx;
    font-size: 0;
    justify-content: space-between;
}

.exchange {
    width: 128rpx;
    height: 128rpx;
}

.function {
    margin-top: 12rpx;
    font-size: 32rpx;
    color: #666;
}

.function .change {
    font-size: 24rpx;
    color: #20B2AA;
}