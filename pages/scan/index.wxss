.empty{
    display: block;
    text-align: center;
    color: #999;
    font-size: 40rpx;
    padding: 100rpx 24rpx;
}

.panel{}

.panel .header{
    padding: 24rpx;
    font-size: 24rpx;
    color: #333;
}

.panel .body{
    margin: 0 16rpx;
    padding: 16rpx;
    font-size: 32rpx;
    word-wrap: break-word;
    background: white;
    color: #666;
}

.body .copy{
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #20B2AA;
}

.act_scan {
    position: fixed;
    bottom: 32rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    border-radius: 100rpx;
    background: #20B2AA;
    color: white;
    font-size: 36rpx;
    text-align: center;
    box-shadow: 0 2rpx 20rpx #999;
}